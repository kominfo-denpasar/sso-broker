{
    "name": "kominfo-denpasar/sso",
    "description": "SSO Broker",
    "keywords": ["sso", "auth"],
    "license": "MIT",
    "homepage": "https://sso.denpasarkota.go.id",
    "authors": [
        {
            "name": "Kominfos Denpasar",
            "email": "support@denpasarkota.go.id",
            "homepage": "https://kominfostatistik.denpasarkota.go.id"
        }
    ],
    "support": {
        "issues": "https://github.com/kominfo-denpasar/sso-broker/issues",
        "source": "https://github.com/kominfo-denpasar/sso-broker"
    },
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "jasny/sso": "^0.5",
        "jasny/immutable": "^2.1",
        "psr/simple-cache": "*",
        "psr/log": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.59",
        "codeception/codeception": "^4.1",
        "codeception/module-phpbrowser": "^1.0",
        "codeception/module-rest": "^1.2",
        "desarrolla2/cache": "^3.0",
        "jasny/http-message": "^1.3",
        "jasny/php-code-quality": "^2.6.0",
        "jasny/phpunit-extension": "^0.3.2",
        "yubb/loggy": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Kominfos\\SSO\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kominfos\\Tests\\SSO\\": "tests/unit/"
        }
    },
    "scripts": {
        "test": [
            "phpstan analyse",
            "codecept run",
            "phpcs -p src"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
